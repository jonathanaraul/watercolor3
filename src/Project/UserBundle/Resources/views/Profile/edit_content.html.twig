{% trans_default_domain 'FOSUserBundle' %}

{%if form_errors(form)%}
<div class="alert alert-error">
	<button type="button" class="close" data-dismiss="alert">
		<i class="icon-remove"></i>
	</button>

	<strong>
		<i class="icon-remove"></i>
		Error
	</strong>

	{{ form_errors(form) }}
	<br>
</div>
{%endif%}
<div class="space-6"></div>

<div class="row-fluid">
	<div class="span12">

		<div >
			<div id="user-profile-3" class="user-profile row-fluid">
				<div class="offset1 span10"> <div class="space"></div>

					<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
						{{ form_start(form) }}

						<div class="tabbable">

							<ul class="nav nav-tabs padding-16">
								<li class="active">
									<a data-toggle="tab" href="#edit-basic"> <i class="green icon-group bigger-125"></i> Editar perfil </a>
								</li>
							</ul>

							<div class="tab-content profile-edit-tab-content">
								<div id="edit-basic" class="tab-pane in active">

									<div class="row-fluid">

										<div class="span4">
											<div class="ace-file-input ace-file-multiple" style="margin-top: 30px;">
												{{ form_widget(form.file) }}
											</div>
											<div class="controls" style="margin-left: 0px;">
												<label class="control-label" for="form-field-comment" style="text-align: left;">Sobre mí:</label>
												{{ form_widget(form.descripcion, { 'attr': {'style': 'width:262px;height: 87px;'} }) }}
											</div>
											
										</div>
										<div class="vspace"></div>
										<div class="span8">
											<div class="vspace" ></div>
											<div class="control-group" style="margin-top: 30px;">
												<label class="control-label" for="form-field-username">Nombre de usuario:</label>
												<div class="controls">
													{{ form_widget(form.username) }}
												</div>
											</div>
											<div class="control-group">
												<label class="control-label" for="form-field-username">Nombre:</label>
												<div class="controls">
													{{ form_widget(form.name) }}
												</div>
											</div>
											<div class="control-group">
												<label class="control-label" for="form-field-username">Email:</label>

												<div class="controls">
													{{ form_widget(form.email) }}
												</div>
											</div>
											<div class="control-group">
												<label class="control-label" for="form-field-username">Contraseña Actual:</label>
												<div class="controls">
													{{ form_widget(form.current_password) }}
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>
							</div>

						<div class="form-actions">
							<button class="btn btn-info" type="button" onclick="submit();">
								<i class="icon-check bigger-110"></i>
								Actualizar usuario
							</button>
						</div>
						{{ form_end(form) }}
					</form>
				</div><!--/span-->
			</div><!--/user-profile-->

		</div><!--/span-->
	</div><!--/row-->
<div class="hr hr32 hr-dotted"></div>

							
